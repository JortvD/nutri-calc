{
  "name": "nutri-score",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "scripts": {
    "serve": "./switch_to_lc.sh en && vue-cli-service serve",
    "serve-de": "./switch_to_lc.sh de && vue-cli-service serve",
    "build": "npm audit fix --only=prod && npm run test && npm run build-en && npm run build-de",
    "build-de": "rm -rf docs/de; ./switch_to_lc.sh de && vue-cli-service build --mode de && ./build_for_lc.sh de",
    "build-en": "rm -rf docs/en; ./switch_to_lc.sh en && vue-cli-service build --mode en && ./build_for_lc.sh en",
    "lint": "vue-cli-service lint",
    "test": "./node_modules/mocha/bin/mocha --recursive"
  },
  "dependencies": {
    "chart.js": "*",
    "core-js": "*",
    "vue": "^3.2.*"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/compiler-sfc": "^3.2.28",
    "eslint": "^8.7.0",
    "eslint-plugin-vue": "^8.3.0",
    "mocha": "^9.1.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
